<?xml version="1.0" encoding="UTF-8"?>
<Context path="/InternshipTutor">
  <Resource 
      name="jdbc/tutor"
      auth="Container"
      type="javax.sql.DataSource"
      maxTotal="50" 
      maxIdle="30" 
      maxWaitMillis="10000"
      driverClassName="com.mysql.jdbc.Driver" 
      username="tutor"
      password="tutor" 
      url="jdbc:mysql://localhost:3306/tutor?zeroDateTimeBehavior=convertToNull"
      
  />
</Context>
